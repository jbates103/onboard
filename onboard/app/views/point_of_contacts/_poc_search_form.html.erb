<row style="margin: 0 30px 0 30px;">
  <%= form_for point_of_contacts_path, method: :get do |f| %>
    <div class="col-md-8">
      <%= f.text_field :search_term,  class: 'poc-search-input', placeholder: "First Name, Last Name or Email. Wildcard '%' accepted." %>
    </div>
    <div class="col-md-2">
      <%= f.submit "Submit", class: "btn btn-lg btn-primary show-btn", method: :get %>
    </div>
    <%= link_to 'Reset', point_of_contacts_path, class: "btn btn-lg btn-primary show-btn", method: :get %>
  <% end %>
</row>