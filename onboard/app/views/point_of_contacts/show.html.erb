<div class="show-bg">
 <row>
    <div class="col-md-9" >
      <h1 class="show-header show-header-links"><%= @point_of_contact.first_name %> <%= @point_of_contact.last_name %></h1>
    </div>
    <div class="col-md-offset-1 col-md-2  back_to_dashboard">
      <h6 class="show-header"><%= link_to "Back to the dashboard", dash_path %></h6>
    </div>
  </row>
  <%= render 'table', poc: @point_of_contact %>
  <row>
    <div class="col-md-5">
      <h2 class="show-header app-header-table">Onboard Applications</h2>
    </div>
  </row>
  <% if present_apps(@own, @reporting, @assigned) %>
    <table class="table table-hover">
      <thead class="show-td bold">
        <th>Application Name</th>
        <th>Jira Ticket Id</th>
        <th>Application Url</th>
      </thead>
        <% if @own.present? %>
        <thead>
          <tr>
            <th colspan="3" class="info bold app_color">Owned</th>
          </tr>
          </thead>
          <tbody>
          <%= render 'app_table', apps: @own %>
          </tbody>
        <% end %>
        <% if @reporting.present? %>
         <thead>
          <tr>
            <th colspan="3" class="info bold app_color">Reporting</th>
          </tr>
          </thead>
          <tbody>
            <%= render 'app_table', apps: @reporting %>
          </tbody>
        <% end %>
        <% if @assigned.present? %>
        <thead>
          <tr>
            <th colspan="3" class="info bold app_color">Assigned</th>
          </tr>
          </thead>
          <tbody>
             <%= render 'app_table', apps: @assigned %>
          </tbody>
        <% end %>   
    </table>
  <% end %>
  <row>
    <div class="col-md-10 show-header-links">
      <%= link_to edit_point_of_contact_path(@point_of_contact), class: 'btn btn-primary show-btn' do %>
       <h4 class="bold show-btn-margin">Edit Contact</h4>
      <% end %>
      <%= link_to point_of_contact_path(@point_of_contact), method: :delete, class: 'btn btn-primary show-btn', data: { confirm: "You will be deleting this record. Proceed?"} do %>
        <h4 class="bold show-btn-margin">Delete Contact</h4>
      <% end %>
    </div>
  </row>
</div>