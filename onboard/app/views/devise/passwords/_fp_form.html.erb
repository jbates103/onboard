<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
   <% if resource.errors.any? %>
   <div class="error_explanation">
      <h2><%= pluralize(resource.errors.count, "Error") %></h2>
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li> * <%= msg %></li>    
        <% end %>
      </ul>
   </div>
  <% end %>
  <div class="field">
    <br />
    <%= f.email_field :email, autofocus: true, class: 'login-input', placeholder: 'E-mail Address' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-primary login-input' %>
  </div>
<% end %>