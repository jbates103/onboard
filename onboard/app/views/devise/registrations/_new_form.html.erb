<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <br />
    <%= f.email_field :email, autofocus: true, class: 'login-input', placeholder: 'E-mail Address', required: true %>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password, autocomplete: "off", class: 'login-input', placeholder: "Password (#{@minimum_password_length} characters minimum)", required: true  %>
  </div>

  <div class="field">
   <br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'login-input', placeholder: 'Password Confirmation', required: true%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary login-input' %>
  </div>
<% end %>