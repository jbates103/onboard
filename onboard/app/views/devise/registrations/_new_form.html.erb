<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <% if resource.errors.any? %>
   <div class="error_explanation">
      <h2><%= pluralize(resource.errors.count, "Error") %></h2>
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li> * <%= msg %></li>    
        <% end %>
      </ul>
   </div>
  <% end %>

  <div class="field">
    <br />
    <%= f.email_field :email, autofocus: true, class: 'login-input', placeholder: 'E-mail Address'%>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password, autocomplete: "off", class: 'login-input', placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
  </div>

  <div class="field">
   <br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'login-input', placeholder: 'Password Confirmation'%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary login-input' %>
  </div>
<% end %>